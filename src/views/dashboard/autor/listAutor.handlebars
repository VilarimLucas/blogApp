<!-- Pre-loader start -->
<div class="theme-loader">
    <div class="loader-track">
        <div class="loader-bar"></div>
    </div>
</div>
<!-- Pre-loader end -->
<div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <div class="pcoded-container navbar-wrapper">

        {{>_navbarDashboard}}

        <div class="pcoded-main-container">
            <div class="pcoded-wrapper">
                {{>_sidebarDashboard}}

                <div class="pcoded-content">
                    <div class="pcoded-inner-content">
                        <!-- Main-body start -->
                        <div class="main-body">
                            <div class="page-wrapper">

                                <!-- Front-icon Breadcrumb card start -->
                                <div class="card page-header p-0">
                                    <div class="card-block front-icon-breadcrumb row align-items-end">
                                        <div class="breadcrumb-header col">
                                            <div class="big-icon">
                                                <i class="icofont icofont-home"></i>
                                            </div>
                                            <div class="d-inline-block">
                                                <h5>Todas os Autores</h5>
                                                <span>Aqui você encontra todas as Autores cadastradas</span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="page-header-breadcrumb">
                                                <ul class="breadcrumb-title m-t-10">
                                                    <li class="breadcrumb-item"><a href="/dashboard">Home</a>
                                                    </li>
                                                    <li class="breadcrumb-item"><a href="/dashboard">Gerenciar Posts</a>
                                                    </li>

                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Front-icon Breadcrumb card end -->

                                <!-- Page-body start -->
                                <div class="page-body">
                                    <!-- Basic table card start -->
                                    <div class="card">
                                        <div class="card-header">
                                            {{!-- <h5>Basic table</h5>
                                            <span>use class <code>table</code> inside table element</span> --}}
                                            <div class="card-header-right">
                                                <ul class="list-unstyled card-option">
                                                    <li><i class="fa fa-chevron-left"></i></li>
                                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                                    <li><i class="fa fa-times close-card"></i></li>
                                                </ul>
                                            </div>

                                        </div>
                                        <div class="card-block table-border-style">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>nome</th>
                                                            <th>Formação</th>
                                                            <th>Profissão</th>
                                                            <th>Editar</th>
                                                            <th>Excluir</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each autor}}
                                                        <tr>
                                                            <th scope="row">{{_id}}</th>
                                                            <td>{{nameAutor}}</td>
                                                            <td>{{training}}</td>
                                                            <td>{{profession}}</td>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                        {{/each}}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Basic table card end -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>